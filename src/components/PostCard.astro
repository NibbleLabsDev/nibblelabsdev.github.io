---
interface Props {
  title: string;
  description: string;
  pubDate: Date;
  slug: string;
  readingTime: number;
}

const { title, description, pubDate, slug, readingTime } = Astro.props;
const formattedDate = pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' });
---

<a href={`/blog/${slug}`} class="block p-5 rounded-lg border border-gray-200 dark:border-gray-800 hover:border-gray-400 dark:hover:border-gray-600 transition-colors">
  <h3 class="font-heading text-lg font-semibold mb-1">{title}</h3>
  <p class="text-sm text-gray-500 dark:text-gray-400 mb-2">{formattedDate} &middot; {readingTime} min read</p>
  <p class="text-gray-600 dark:text-gray-300 text-sm">{description}</p>
</a>
