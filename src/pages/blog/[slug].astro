---
import { getCollection, render } from 'astro:content';
import Base from '../../layouts/Base.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({ params: { slug: post.id } }));
}

const post = Astro.props;
const entry = (await getCollection('blog')).find((p) => p.id === Astro.params.slug)!;
const { Content } = await render(entry);

const readingTime = Math.max(1, Math.ceil((entry.body ?? '').split(/\s+/).length / 200));
const formattedDate = entry.data.pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' });
---

<Base title={entry.data.title} description={entry.data.description}>
  <article>
    <header class="mb-8">
      <h1 class="font-heading text-3xl font-semibold mb-2">{entry.data.title}</h1>
      <p class="text-sm text-gray-500 dark:text-gray-400">{formattedDate} &middot; {readingTime} min read</p>
    </header>
    <div class="prose dark:prose-invert prose-headings:font-heading max-w-none">
      <Content />
    </div>
  </article>
</Base>
