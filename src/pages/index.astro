---
import { getCollection } from 'astro:content';
import Base from '../layouts/Base.astro';
import PostCard from '../components/PostCard.astro';

const posts = (await getCollection('blog'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 5);

function readingTime(body: string): number {
  return Math.max(1, Math.ceil(body.split(/\s+/).length / 200));
}
---

<Base title="Home">
  <section class="mb-10">
    <h1 class="font-heading text-3xl font-semibold mb-2">Nibble Labs</h1>
    <p class="text-gray-600 dark:text-gray-300">Small software experiments that solve real problems.</p>
  </section>

  <section>
    <h2 class="font-heading text-xl font-semibold mb-4">Recent Posts</h2>
    <div class="flex flex-col gap-4">
      {posts.map((post) => (
        <PostCard
          title={post.data.title}
          description={post.data.description}
          pubDate={post.data.pubDate}
          slug={post.id}
          readingTime={readingTime(post.body ?? '')}
        />
      ))}
    </div>
  </section>
</Base>
